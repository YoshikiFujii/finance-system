# 本番環境用設定ファイル
# このファイルをコピーして.envとして使用してください

# データベース設定
DB_HOST=db
DB_PORT=3306
DB_NAME=finance_db
DB_USER=finance
DB_PASS=financepass

# セキュリティ設定
SESSION_NAME=finance_sid
SESSION_LIFETIME=3600

# アップロード設定
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=/var/log/finance/app.log

# バックアップ設定
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/var/backups/finance

# 本番環境フラグ
PRODUCTION=true
DEBUG=false
